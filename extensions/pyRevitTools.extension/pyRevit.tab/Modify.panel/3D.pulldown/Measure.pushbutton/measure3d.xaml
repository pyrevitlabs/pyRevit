<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Measure Tool" Height="500" Width="350" ShowInTaskbar="False" Topmost="True"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Current Measurement Section -->
        <GroupBox Header="Current Measurement" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock x:Name="point1_text" Text="Point 1: Not selected" TextWrapping="Wrap" Margin="0,0,0,5"/>
                <TextBlock x:Name="point2_text" Text="Point 2: Not selected" TextWrapping="Wrap" Margin="0,0,0,10"/>
                
                <Separator Margin="0,5"/>
                
                <TextBlock x:Name="dx_text" Text="ΔX: -" Margin="0,5,0,2" TextAlignment="Right" FontWeight="SemiBold"/>
                <TextBlock x:Name="dy_text" Text="ΔY: -" Margin="0,2" TextAlignment="Right" FontWeight="SemiBold"/>
                <TextBlock x:Name="dz_text" Text="ΔZ: -" Margin="0,2" TextAlignment="Right" FontWeight="SemiBold"/>
                <TextBlock x:Name="diagonal_text" Text="Diagonal: -" Margin="0,2" TextAlignment="Right" FontWeight="Bold" FontSize="14"/>
                <TextBlock x:Name="project_unit_text" Text="" Visibility="Collapsed" Foreground="Red" FontWeight="Bold" Margin="0,5,0,2"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Measurement History -->
        <GroupBox Header="Measurement History" Grid.Row="2" Padding="5" Margin="0,0,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="history_text" Text="No measurements yet" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Vertical">
            <Button x:Name="measure_button" Content="Measure" Height="35" Margin="0,0,0,5" Click="measure_click" FontWeight="Bold"/>
            <Button x:Name="delete_button" Content="Delete All Visual Aids" Height="30" Click="delete_click"/>
        </StackPanel>
    </Grid>
</Window>