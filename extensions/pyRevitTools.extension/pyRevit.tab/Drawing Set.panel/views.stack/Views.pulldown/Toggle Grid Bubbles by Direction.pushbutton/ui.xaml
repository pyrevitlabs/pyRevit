<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="White"
    Title="Toggle Grid Bubbles"
    MinHeight="300"
    MinWidth="350"
    ResizeMode="NoResize"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    Width="316"
    BorderBrush="#FFA0A0A0"
    BorderThickness="1,1,1,1"
    MouseLeftButtonDown="move_window" Height="328" Topmost="True">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="145"/>
            <RowDefinition/>
            <!-- Added Row Definition -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Toggle Grid Bubbles" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10" Width="auto" VerticalAlignment="Center"/>
        <Button Content="âŒ" Click="close_screen" Background="{x:Null}" FontSize="12" FontWeight="ExtraBlack" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" BorderBrush="{x:Null}"/>

        <!-- Toggle All -->
        <GroupBox Grid.Row="1" Header="Toggle all" Margin="10,10,10,18">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="hide_all" Grid.Column="0" GroupName="ToggleAll" Content="Hide" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <RadioButton x:Name="show_all" Grid.Column="1" GroupName="ToggleAll" Content="Show" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>

        <!-- Toggle by Direction -->
        <GroupBox Grid.Row="1" Header="Toggle by direction" Margin="10,100,10,0" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="check_top" Grid.Row="0" Grid.Column="1" Content="Top" HorizontalAlignment="Center" Width="auto" Height="auto" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_left" Grid.Row="1" Grid.Column="0" Content="Left" HorizontalAlignment="Center" Width="auto" Height="auto" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_right" Grid.Row="1" Grid.Column="2" Content="Right" HorizontalAlignment="Center" Width="auto" Height="auto" VerticalAlignment="Center"/>
                <CheckBox x:Name="check_bottom" Grid.Row="2" Grid.Column="1" Content="Bottom" HorizontalAlignment="Center" Width="auto" Height="auto" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- Centered Button in the Last Row -->
        <Button Grid.Row="3" Content="Fermer" Click="fermer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="20" Margin="0,5,0,5"/>
    </Grid>
</Window>
